
// Função para verificar se há um vencedor ou empate
function checkWinner() {
    let roundWon = false;
    for (let i = 0; i < winningConditions.length; i++) {
        const [a, b, c] = winningConditions[i];
        if (gameState[a] && gameState[a] === gameState[b] && gameState[a] === gameState[c]) {
            roundWon = true;
            break;
        }
    }

    if (roundWon) {
        statusDisplay.textContent = `Jogador ${currentPlayer} venceu!`;
        gameActive = false;
        restartButton.style.display = 'block';  // Exibe o botão de reiniciar
        return;
    }
    
    const roundDraw = !gameState.includes("");
    if (roundDraw) {
        statusDisplay.textContent = 'Empate!';
        gameActive = false;
        restartButton.style.display = 'block';  // Exibe o botão de reiniciar
        return;
    }
    
    currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
    statusDisplay.textContent = `É a vez do jogador ${currentPlayer}`;
}
