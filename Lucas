local caixa = script.Parent
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local carroModel = ReplicatedStorage:WaitForChild("Car")
local debounce = false

function Carro(hit)
	local player = game.Players:GetPlayerFromCharacter(hit.Parent)
	if player and not debounce then
		debounce = true
		local novoCarro = carroModel:Clone()
		novoCarro:SetPrimaryPartCFrame(CFrame.new(Vector3.new(0, 5, 0))) -- ajuste a posição
		novoCarro.Parent = game.Workspace
		wait(2)
		debounce = false
	end
end

caixa.Touched:Connect(Carro)
