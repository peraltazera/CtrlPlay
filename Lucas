local block = script.Parent

local startPosition = block.Position

local moveDistance = 20
local speed = 0.5

local function moveBlock()
	while true do
		for i = 0, moveDistance, speed do
			block.Position = startPosition + Vector3.new(0, 0, i)
			wait(0.01)
		end

		for i = moveDistance, 0, -speed do
			block.Position = startPosition + Vector3.new(0, 0, i)
			wait(0.01)
		end
	end
end

moveBlock()
