local blocoFantasma = script.Parent

function Desaparece(part)
    if part.Parent:FindFirstChild("Humanoid") then
        for transparencia = 0, 1, 0.1 do
            blocoFantasma.Transparency = transparencia
            wait(0.1)
        end
        blocoFantasma.CanCollide = false
        wait(0.5)
        for transparencia = 1, 0, -0.1 do
            blocoFantasma.Transparency = transparencia
            wait(0.1)
        end
        blocoFantasma.CanCollide = true
    end
end

blocoFantasma.Touched:Connect(Desaparece)
