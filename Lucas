local Players = game:GetService("Players")
local sabre = script.Parent

local function Golpear()
	local str = Instance.new("StringValue")
	str.Name = "toolanim"
	str.Value = "Slash"
	str.Parent = sabre
end

local function notoque(outrapart)
	local outrohumano = outrapart.Parent:FindFirstChild("Humanoid")
	if outrohumano then
		outrapart.Parent.Humanoid.Health -= 25
		
		sabre.Handle.Lamina.CanTouch = false
		wait(1)
		sabre.Handle.Lamina.CanTouch = true
	end
end

sabre.Activated:Connect(Golpear)
sabre.Handle.Lamina.Touched:Connect(notoque)
