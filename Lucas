extends KinematicBody

var velocidade = 3
var movimantacao = Vector3.ZERO

var novaFaixa = 0
var velhaFaixa = 0

func _physics_process(delta):
	movimantacao = lerp(movimantacao, velocidade * Vector3.BACK, 0.05) 
	movimantacao = move_and_slide(movimantacao)
	novaFaixa = int(translation.z)
	if novaFaixa == velhaFaixa+2:
		velhaFaixa = novaFaixa
		#get_parent().AdicionarFaixa()
