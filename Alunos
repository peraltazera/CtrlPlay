def saudacoes(nome):
    import random
    frases = ["Bom dia!",
              "Bom dia, meu nome é" + nome + " como posso te ajudar?",
             "Olá, tudo bem ?"]
    print(frases[random.randint(0,2)])

def ReceberTexto():
    texto = "Cliente: " + input("Cliente: ")
    palavrasProibidas = ["bocó","chato","pimba"]
    for palavra in palavrasProibidas:
        if palavra in texto:
            print("Olha a boca!")
            return ReceberTexto()
    return texto

def buscarResposta(nome, texto):
    with open("BancoDeDadosChatBot.txt", "a+") as conhecimento:
        conhecimento.seek(0)
        print(conhecimento.readline())
            
